<!--pages/user/user.wxml-->
<view class="user-card">
  <view class='user-info'>
    <image class='user-head' mode='aspectFit' src="{{userInfo?userInfo.avatarUrl: '../../images/user.png'}}"></image>
    <view class='user-name'>{{!!userInfo?userInfo.nickName:""}}</view>
    <view class="user-name-1">您好，以下是您的信息:</view>
  </view>
  <view class="line"></view>
  <view wx:if="{{checkSta==1}}" class="user-real-info">
    <view>您好，你在系统内绑定的信息是：</view>
    <view>邮箱是： {{relName}}</view>
    <!-- <view>IMAP密码是： {{num}}</view> -->
    <view class="header-box">
      <image class="avatar" src="/images/no-order.png"></image>
      <van-button plain type="info" lang="zh_CN" bindtap="loademail">点击加载邮件</van-button>
    </view>

  </view>
  <view wx:if="{{checkSta==0}}" class="user-real-info">请先在填写下面的表格来绑定用户信息！</view>
</view>
<form wx:if="{{checkSta==0}}" bindsubmit="toBind">
  <view class="cu-form-group">
    <view class="title">邮箱</view>
    <input name="name" placeholder="请输入邮箱" confirm-type="next" value="{{emailaddress}}"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">密码</view>
    <input name="num" placeholder="请输入IMAP密码" type="number" value="{{password}}"></input>
  </view>
  <button class="cu-btn block bg-orange margin-tb-sm user-form-button" form-type="submit">提交
  </button>
</form>


<view class="container">
  <view class="asset">
    <view class='item' bindtap='goAsset'>
      <view>{{balance}}</view>
      <view>余额</view>
    </view>
    <view class='item right' bindtap='goAsset'>
      <view>{{freeze}}</view>
      <view>冻结</view>
    </view>
    <view class='item right' bindtap='goScore'>
      <view>{{score}}</view>
      <view>积分</view>
    </view>
    <navigator url="/pages/score/growth">
      <view class='item right'>
        <view>{{growth}}</view>
        <view>成长值</view>
      </view>
    </navigator>
  </view>
  <view class="space"></view>
  <van-cell custom-class="vw100" title="我的订单" is-link url="/pages/order-list/index" />
  <view class='order-shortcut'>
    <!-- https://www.iconfont.cn/collections/detail?spm=a313x.7781069.0.da5a778a4&cid=2767 -->
    <view class='item' bindtap='goOrder' data-type="0">
      <view wx:if="{{count_id_no_pay !== 0}}" class='dot'>{{count_id_no_pay}}</view>
      <image class="icon" src="/images/order/topay.png" background-size="cover"></image>
      <view class='text'>待付款</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="1">
      <view wx:if="{{count_id_no_transfer !== 0}}" class='dot'>{{count_id_no_transfer}}</view>
      <image class="icon" src="/images/order/fahuo.png" background-size="cover"></image>
      <view class='text'>待发货</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="2">
      <view wx:if="{{count_id_no_confirm !== 0}}" class='dot'>{{count_id_no_confirm}}</view>
      <image class="icon" src="/images/order/shouhuo.png" background-size="cover"></image>
      <view class='text'>待收货</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="3">
      <view wx:if="{{count_id_no_reputation !== 0}}" class='dot'>{{count_id_no_reputation}}</view>
      <image class="icon" src="/images/order/pj.png" background-size="cover"></image>
      <view class='text'>待评价</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="99">
      <image class="icon" src="/images/order/shouhou.png" background-size="cover"></image>
      <view class='text'>售后</view>
    </view>
  </view>
  <block wx:if="{{apiUserInfoMap.peisongMember && apiUserInfoMap.peisongMember.type != 0}}">
    <view class="space"></view>
    <view class="menu-item">
      <view class="l">工作状态 ({{apiUserInfoMap.peisongMember.statusStr}})</view>
      <van-switch checked="{{ memberChecked }}" bind:change="memberCheckedChange" />
    </view>
    <view class="line"></view>
    <navigator url="/pages/peisong/orders">
      <view class="menu-item">
        <view class="l hongdian-box">配送订单<view wx:if="{{peisongOrderNumber}}" class="hongdian">{{peisongOrderNumber}}
          </view>
        </view>
        <image class="next" src="/images/icon/next.png"></image>
      </view>
    </navigator>
    <block wx:if="{{apiUserInfoMap.peisongMember.type == 2}}">
      <view class="line"></view>
      <navigator url="/pages/peisong/orders?status=1">
        <view class="menu-item">
          <view class="l hongdian-box">待分配订单<view wx:if="{{peisongOrderNumber2}}" class="hongdian">
              {{peisongOrderNumber2}}</view>
          </view>
          <image class="next" src="/images/icon/next.png"></image>
        </view>
      </navigator>
    </block>
    <view class="space"></view>
  </block>
</view>
