/* pages/orders/orders.wxss */
.categoryContainer{
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: seagreen;
  margin: 0 0;
  
}

.menu{
  width: 20%;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: rgb(206, 47, 108);
  justify-content: start;
  align-items: center;
}

.menu .classtype{
  margin: 10rpx 0;
}

.container text{
  color: white;
  font-weight: 500;
}

.list{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list .productList{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin: 16rpx 0;
}

.productList .info{
  width: 100%;
  display: flex;
  flex-direction: column;
}


image{
  height: 200rpx;
  width: 300rpx;
}

.bottombuttons {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
}