/**index.wxss**/
.categoryContainer {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
  margin: 0 0;
}

.menu {
  width: 20%;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: rgb(255, 255, 255);
  justify-content: start;
  align-items: center;
  position: fixed;
}

.fakemenu {
  width: 20%;
}

.menu .classtype {
  margin: 10rpx 0;
}

.container text {
  color: white;
  font-weight: 500;
}

.list {
  width: 80%;
  display: flex;
  flex-direction: column;
}

.list .productList {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin: 16rpx 0;
}

.productList .info {
  width: 100%;
  display: flex;
  flex-direction: column;
}

image {
  height: 200rpx;
  width: 300rpx;
}

.bottombuttons {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
}